{
  "name": "rust-mcp-dashboard",
  "version": "0.1.3",
  "description": "Tailwind CSS build for Rust MCP Dashboard",
  "type": "module",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:dev": "BUILD_MODE=development tsx scripts/build.ts",
    "build:prod": "BUILD_MODE=production tsx scripts/build.ts",
    "clean": "tsx scripts/build.ts clean",
    "watch": "tsx scripts/build.ts watch",
    "build-css": "tailwindcss -c ./config/tailwind.config.ts -i ./static/css/input.css -o ./static/css/output.css --minify",
    "watch-css": "tailwindcss -c ./config/tailwind.config.ts -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build-js": "tsx config/esbuild.config.ts",
    "build-js:dev": "NODE_ENV=development tsx config/esbuild.config.ts",
    "build-js:prod": "NODE_ENV=production tsx config/esbuild.config.ts",
    "analyze-bundle": "tsx -e \"import meta from './static/js/bundle-meta.json' assert { type: 'json' }; console.log(JSON.stringify(meta, null, 2));\"",
    "test": "vitest -c ./config/vitest.config.ts",
    "test:ui": "vitest -c ./config/vitest.config.ts --ui",
    "test:coverage": "vitest -c ./config/vitest.config.ts --coverage",
    "type-check": "tsc --noEmit",
    "build:ts": "tsc"
  },
  "dependencies": {
    "alpinejs": "^3.13.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "@types/alpinejs": "^3.13.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.14",
    "@types/testing-library__dom": "^7.0.2",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^1.2.0"
  }
}
