{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["static/js/components/*"],
      "@utils/*": ["static/js/utils/*"],
      "@/*": ["static/js/*"]
    }
  },
  "include": [
    "static/js/**/*",
    "config/**/*",
    "scripts/**/*",
    "tests/**/*",
    "static/js/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static/js/htmx*.js"
  ]
}